<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>{$device}</name>
      <config>
      <interface xmlns="http://tail-f.com/ned/cisco-ios-xr">
 	<?if {$interface_type = 'Bundle-Ethernet'}?>
        <Bundle-Ether-subinterface>
          <Bundle-Ether>
            <id>{$interface}.{$dot1q_tag}</id>
            <mode>l2transport</mode>
            <description>{$description}</description>
         <!--   <mtu>{$mtu}</mtu>  -->
            <?if {$encapsulation_type = 'dot1q'}?>
            <encapsulation>
              <dot1q>
                <vlan-id>{$dot1q_tag}</vlan-id>
              </dot1q>
            </encapsulation>
            <?end?>
            <service-policy>
            <?if {$service_policy_in != 'None'}?>
              <input>
                <name>{$service_policy_in}</name>
              </input>
            <?end?>
            <?if {$service_policy_out != 'None'}?>
              <output>
                <name>{$service_policy_out}</name>
              </output>
            <?end?>
            </service-policy>
        <vrf>{$vrf_name}</vrf>
        <ipv4>
          <address>
            <ip>{$ipv4_address}</ip>
            <mask>{$subnet_mask}</mask>
          </address>
        </ipv4>
      </Bundle-Ether>
      </Bundle-Ether-subinterface>
         <?end?>
      <?if {$interface_type = 'GigabitEthernet'}?>
        <GigabitEthernet-subinterface>
          <GigabitEthernet>
            <id>{$interface}.{$dot1q_tag}</id>
            <mode>l2transport</mode>
            <description>{$description}</description>
           <!-- <mtu>{$mtu}</mtu> -->
            <?if {$encapsulation_type = 'dot1q'}?>
            <encapsulation>
              <dot1q>
                <vlan-id>{$dot1q_tag}</vlan-id>
              </dot1q>
            </encapsulation>
            <?end?>
            <service-policy>
            <?if {$service_policy_in != 'None'}?>
              <input>
                <name>{$service_policy_in}</name>
              </input>
            <?end?>
            <?if {$service_policy_out != 'None'}?>
              <output>
                <name>{$service_policy_out}</name>
              </output>
            <?end?>
            </service-policy>
            <vrf>{$vrf_name}</vrf>
        <ipv4>
          <address>
            <ip>{$ipv4_address}</ip>
            <mask>{$subnet_mask}</mask>
          </address>
        </ipv4>
       </GigabitEthernet>
        </GigabitEthernet-subinterface>
      <?end?>
      <?if {$interface_type = 'TenGigE'}?>
        <TenGigE-subinterface>
          <TenGigE>
            <id>{$interface}.{$dot1q_tag}</id>
            <mode>l2transport</mode>
            <description>{$description}</description>
            <!-- <mtu>{$mtu}</mtu> -->
            <?if {$encapsulation_type = 'dot1q'}?>
            <encapsulation>
              <dot1q>
                <vlan-id>{$dot1q_tag}</vlan-id>
              </dot1q>
            </encapsulation>
            <?end?>
            <service-policy>
            <?if {$service_policy_in != 'None'}?>
              <input>
                <name>{$service_policy_in}</name>
              </input>
            <?end?>
            <?if {$service_policy_out != 'None'}?>
              <output>
                <name>{$service_policy_out}</name>
              </output>
            <?end?>
            </service-policy>
 	    <vrf>{$vrf_name}</vrf>
        <ipv4>
          <address>
            <ip>{$ipv4_address}</ip>
            <mask>{$subnet_mask}</mask>
          </address>
        </ipv4>
        </TenGigE>
        </TenGigE-subinterface>
      <?end?>                  
      </interface>
      </config>
  </device>
  </devices>
</config>
